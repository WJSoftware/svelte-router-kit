{
	"name": "@svelte-router/kit",
	"version": "1.0.0-beta.0",
	"author": {
		"name": "José Pablo Ramírez Vargas",
		"email": "webJose@gmail.com"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:ci": "npx playwright install && npm run test:unit -- --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/WJSoftware/svelte-router-kit.git"
	},
	"bugs": {
		"url": "https://github.com/WJSoftware/svelte-router-kit/issues"
	},
	"license": "MIT",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"@svelte-router/core": "^1.0.0",
		"@sveltejs/kit": "^2.12.0",
		"svelte": "^5.31.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@vitest/browser": "^4.0.15",
		"@vitest/browser-playwright": "^4.0.15",
		"playwright": "^1.53.0",
		"publint": "^0.3.2",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1"
	},
	"keywords": [
		"svelte",
		"router",
		"routing",
		"navigation",
		"spa",
		"framework",
		"micro-frontend",
		"microfrontend",
		"micro frontends",
		"micro front-end",
		"pwa"
	]
}
